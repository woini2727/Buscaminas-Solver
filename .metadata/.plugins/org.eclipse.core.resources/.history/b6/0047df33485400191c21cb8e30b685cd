package buscaminas_solver;
import java.io.File;
import java.io.FileNotFoundException;
import java.util.Iterator;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) throws FileNotFoundException {

		Celda [][] tablero= new Celda[9][9];
		
		//---Cargamos el juego desde un TXT---//
		File myObj = new File("aa.txt");
		Scanner myReader = new Scanner(myObj);
		int cont_i=0;
		int cont_j=0; 
	      while (myReader.hasNextLine()) {
	        String data = myReader.nextLine();
	        String [] words = data.split("\t");
	        for (String palabra : words ) {
	        	//System.out.println(palabra);
	        	tablero[cont_i][cont_j]=new Celda(Integer.parseInt(palabra));
	        	cont_j+=1;
	        }
	        cont_i+=1;
	        cont_j=0;
	      }
	      //---listamos el tablero---//
	      for (int i=0;i<9;i++) {
			for(int j=0; j<9;j++) {
				System.out.print(tablero[i][j].getValue());
			}
			System.out.println("\n");
		}
		
	    //	Jugar 
	    while(terminar==false) {
	    	
	    }
	      
		
		
	}

}
